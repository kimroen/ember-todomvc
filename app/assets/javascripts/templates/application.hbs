        <li><a href="#" class="navbar-link" {{action 'logout'}}><span class="glyphicon glyphicon-thumbs-down"></span> Log out</a></li>
      {{else}}
        {{#link-to 'login' tagName='li'}}{{#link-to 'login'}}<span class="glyphicon glyphicon-thumbs-up"></span> Log in{{/link-to}}{{/link-to}}
        {{#link-to 'users.new' tagName='li'}}{{link-to "Register" 'users.new'}}{{/link-to}}
      {{/if}}
      </ul>
      {{#if session.isAuthenticated}}<p class="navbar-text navbar-right">Hi, {{session.user.name}}! Good to see you.</p>{{/if}}
    </div>

  </nav>
  {{outlet}}
</div>
