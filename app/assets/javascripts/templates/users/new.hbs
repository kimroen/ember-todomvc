<div class="row">
  <div class="col-lg-4 col-lg-offset-4 col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
    <h1>Register</h1>
    <form role="form" {{action "createUser" on="submit"}}>
      <div {{bind-attr class=":form-group errors.name:has-error"}}>
        <label class="control-label" for="full-name">Full Name</label>
        {{input type="text" id="full-name" class="form-control" value=name placeholder="Full Name"}}
        {{#if errors.name}}<p class="help-block">{{errors.name}}</p>{{/if}}
      </div>
      <div {{bind-attr class=":form-group errors.email:has-error"}}>
        <label class="control-label" for="email">Email Address</label>
        {{input type="email" id="email" class="form-control" value=email placeholder="Email Address"}}
        {{#if errors.email}}<p class="help-block">{{errors.email}}</p>{{/if}}
      </div>
      <div {{bind-attr class=":form-group errors.username:has-error"}}>
        <label class="control-label" for="username">Username</label>
        {{input type="text" id="username" class="form-control" value=username placeholder="Username"}}
        {{#if errors.username}}<p class="help-block">{{errors.username}}</p>{{/if}}
      </div>
      <div {{bind-attr class=":form-group errors.password:has-error"}}>
        <label class="control-label" for="password">Password</label>
        {{input type="password" id="password" class="form-control" value=password placeholder="Password"}}
        {{#if errors.password}}<p class="help-block">{{errors.password}}</p>{{/if}}
      </div>
      <div {{bind-attr class=":form-group errors.password_confirmation:has-error"}}>
        <label class="control-label" for="confirm-password">Confirm Password</label>
        {{input type="password" id="confirm-password" class="form-control" value=password_confirmation placeholder="Confirm Password"}}
        {{#if errors.password_confirmation}}<p class="help-block">{{errors.password_confirmation}}</p>{{/if}}
      </div>
      <button type="submit" class="btn btn-primary pull-right">Submit</button>
    </form>
  </div>
</div>
